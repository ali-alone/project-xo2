<Window x:Class="project_xo2.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_xo2.View"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" Background="Transparent" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="Login" MouseDown="Window_MouseDown" Height="450" Width="350">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition>

                </RowDefinition>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#4f7492" Offset="0.0"/>
                        <GradientStop Color="#0c2442" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border BorderBrush="Black" BorderThickness="1"/>
            </Border>

            <StackPanel VerticalAlignment="Top">
                <Image x:Name="image" Source="/image/Adobe Express - file.png" Width="200" Stretch="Fill"  />
                <TextBlock Text="Login" FontSize="15" Foreground="Black" HorizontalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>


            <StackPanel Grid.Row="1">

                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Account" Margin="0,205,0,185" VerticalAlignment="Center"/>
                    <Label Content="UserName :" Margin="0,200,0,185" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>

                    <TextBox Text="" 
                             Background="Transparent" 
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Margin="5,205,0,185"
                             Opacity="0.4"
                             Name="textBox1" Width="100"/>

                </StackPanel>
                <Border Width="250" Background="Black" Opacity="0.5" Height="2" Margin="-100,-370,0,0"/>


                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Lock" Margin="0,-140,0,185" VerticalAlignment="Center"/>

                    <Label Content="PassWord :" Margin="0,-140,0,185" FontWeight="Bold"/>


                    <PasswordBox Password="" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Margin="0,-135,0,0"
                             Opacity="0.4"
                            Name="textBox2"
                            FontWeight="Bold" Width="100"/>
                    <TextBlock Text="" 
                            Background="Transparent"  
                            Visibility="Collapsed"
                            Margin="0,-135,0,0"
                            Opacity="0.4"
                           Name="textBox3"
                           FontWeight="Bold" Width="100"/>


                </StackPanel>
                <Border Width="250" Background="Black" Opacity="0.5" Height="2" Margin="-100,-370,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Width="100" Height="40" Content="enter" Margin="15,250,0,0" Click="Button_Click"/>
                <Button Width="100" Height="40" Content="exit" Margin="5,250,0,0" Click="Button_Click_1"/>
                <Button Width="100" Height="40" Content="clear" Margin="5,250,0,0" Click="Button_Click_2"/>
            </StackPanel>
        </Grid>
        <CheckBox Content="visible/not visible" HorizontalAlignment="Left" Margin="258,284,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Height="26" Width="40"/>
    </Grid>
</Window>
